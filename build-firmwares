#!/usr/bin/env elixir

_key = System.fetch_env!("NH_KEY")
_secret = System.fetch_env!("NH_SECRET")

targets = [
    "rpi0",
    "rpi",
    "rpi2",
    "rpi3",
    "rpi3a",
    "rpi4",
    "rpi5",
    "grisp2",
    "bbb",
    "mangopi_mq_pro",
    "osd32mp1",
    "srhub",
]

custom = [
  "rpi4",
  "rpi5"
]

targets
|> Enum.map(fn target ->
  IO.puts("Building #{target}...")
  source =
    if target in custom do
      "source /home/lawik/projects/nerves_systems/o/#{target}/nerves-env.sh;"
    else
      ""
    end
  with {_, 0} <- System.shell("export XLA_TARGET_PLATFORM=\"aarch64-linux-gnu\"; export MIX_TARGET=#{target}; #{source} ./do_build") do
    IO.puts("#{target} built OK")
    target
  else
    {out, _} ->
      IO.puts(out)
      raise "foo"
  end
end)
#|> Enum.map(fn target ->
